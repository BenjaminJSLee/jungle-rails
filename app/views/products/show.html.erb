<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <%= form_for [@product, @product.reviews.new] do |f| %>
        <%= f.text_area :description %>
        <%= f.select :rating, [1,2,3,4,5], :selected => 3 %>
        <%= f.submit "Submit", :class => 'btn btn-primary' %>
      <% end %>
    </div>

    <div class="row">
      <% @product.reviews.each do |review| %>
        <%
        if !review.persisted? 
          break
        end
        %>
        <dl class="row jumbotron">
          <dt class="h4"><%= review.user.first_name + " " + review.user.last_name %></dt>
          <hr>
          <dd class="h5">Rating: <%= review.rating %>/5</dd>
          <dd><%= review.description %></dd>
        </dl>
      <% end %>
    </div>

  </article>

</section>
